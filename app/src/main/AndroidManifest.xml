<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cc.rome753.surfacepaint">
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/fractal"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name="cc.rome753.surfacepaint.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="cc.rome753.surfacepaint.fractal.SurfaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name="cc.rome753.surfacepaint.fractal.FramesActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name="cc.rome753.surfacepaint.fractal.TextureActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name="cc.rome753.surfacepaint.opengl.SphereActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name="cc.rome753.surfacepaint.opengl.DiceActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/FullScreenTheme">
        </activity>
        <activity android:name="cc.rome753.surfacepaint.box2d.Box2DActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/FullScreenTheme">
        </activity>
    </application>

</manifest>